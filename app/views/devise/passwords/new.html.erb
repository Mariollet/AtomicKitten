<div class="container" style="margin: auto; width:40%; padding:10px;">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<br>
<div class="field">
  <div class="control has-icons-left has-icons-right">
    <input class="input" type="email" placeholder="Ton adresse mail" <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <span class="icon is-left">
      <i class="fas fa-envelope"></i>
    </span>
    <span class="icon is-right">
      <i class="fas fa-check"></i>
    </span>
  </div>
</div>

<div class="actions">
  <%= f.submit "Envoyer", class: "btn btn-sm btn-outline-dark btn-block" %>
</div>
<%end%>
<hr class="my-3">
<a class="btn btn-sm btn-outline-secondary btn-block" <%= link_to "S'inscrire", new_user_registration_path %></a>
<a class="btn btn-sm btn-outline-secondary btn-block" <%= link_to "Se connecter", new_user_session_path %></a>
